<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:paddingTop="@dimen/width_size_10"
    android:paddingBottom="@dimen/width_size_10"
    android:gravity="center"
    android:background="?android:attr/selectableItemBackgroundBorderless">

    <android.support.v7.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardCornerRadius="@dimen/width_size_20">
        <ImageView
            android:id="@+id/mMenuImgIv"
            android:layout_width="@dimen/width_size_40"
            android:layout_height="@dimen/width_size_40"
            android:src="@mipmap/ic_launcher"
            android:background="@color/colorAccent"
            android:scaleType="fitXY"/>

    </android.support.v7.widget.CardView>

    <TextView
        android:id="@+id/mMenuNameTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/width_size_5"
        android:text="@string/app_name"/>

</LinearLayout>